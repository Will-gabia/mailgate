{
  "name": "mail-gateway",
  "version": "0.1.0",
  "description": "SMTP mail receiving, classification and forwarding gateway",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:api": "tsx watch src/api/main.ts",
    "dev:worker": "tsx watch src/worker.ts",
    "build": "tsc",
    "build:dashboard": "npm run build --prefix dashboard",
    "start": "node dist/index.js",
    "start:api": "node dist/api/main.js",
    "start:worker": "node dist/worker.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "cli": "tsx src/cli.ts",
    "generate-cert": "bash scripts/generate-cert.sh"
  },
  "keywords": [
    "smtp",
    "mail",
    "gateway",
    "classification"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@prisma/client": "^6.19.2",
    "bullmq": "^5.70.1",
    "dotenv": "^16.4.7",
    "hono": "^4.12.2",
    "ioredis": "^5.9.3",
    "mailparser": "^3.7.2",
    "nodemailer": "^6.10.0",
    "pino": "^9.6.0",
    "smtp-server": "^3.13.6",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/mailparser": "^3.4.6",
    "@types/node": "^25.3.0",
    "@types/nodemailer": "^7.0.11",
    "@types/smtp-server": "^3.5.12",
    "prisma": "^6.19.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
